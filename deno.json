{
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true
  },
  "exclude": [
    "coverage",
    "npm"
  ],
  "exports": {
    ".": "./mod.ts",
    "./format": "./formatMessage.ts"
  },
  "fmt": {
    "exclude": [
      "CHANGELOG.md"
    ],
    "lineWidth": 100,
    "proseWrap": "preserve"
  },
  "imports": {
    "@core/asyncutil": "jsr:@core/asyncutil@^1.2.0",
    "@deno/dnt": "jsr:@deno/dnt@^0.41.3",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/testing": "jsr:@std/testing@^1.0.9",
    "typescript": "npm:typescript@^5.7.3"
  },
  "lint": {
    "rules": {
      "exclude": [
        "ban-types",
        "require-await"
      ],
      "include": [
        "explicit-module-boundary-types",
        "no-console",
        "no-top-level-await"
      ]
    }
  },
  "license": "MIT",
  "lock": false,
  "name": "@smol/gram",
  "publish": {
    "exclude": [
      "**/*.test.ts",
      "buildForNode.ts"
    ],
    "include": [
      "deno.json",
      "**/*.md",
      "**/*.ts"
    ]
  },
  "tasks": {
    "codegen": "deno run -ENR generateTgApi.ts > TgApi.ts && deno fmt TgApi.ts",
    "dnt": "deno run -A buildForNode.ts",
    "test": "deno test --coverage -R && deno coverage --lcov --output=coverage/lcov.info && deno check --doc **/*.ts && deno lint",
    "snapshot": "deno test -RW=. generateTgApi.test.ts -- --update"
  },
  "version": "2.10.0"
}
